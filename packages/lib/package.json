{
  "name": "maplibre-animated-shaders",
  "version": "0.2.0",
  "description": "Animated GLSL shaders for MapLibre GL JS",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.cjs",
      "types": "./dist/types/index.d.ts"
    },
    "./plugins": {
      "import": "./dist/plugins/index.js",
      "require": "./dist/plugins/index.cjs",
      "types": "./dist/plugins/index.d.ts"
    },
    "./shaders/*": "./dist/shaders/*"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "npm run validate:glsl && tsc && vite build --mode lib",
    "build:lib": "npm run validate:glsl && vite build --mode lib",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "validate:glsl": "npx tsx ../../scripts/validate-glsl.ts",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch"
  },
  "keywords": [
    "maplibre",
    "maplibre-gl",
    "webgl",
    "glsl",
    "shaders",
    "animation",
    "maps",
    "gis",
    "visualization"
  ],
  "author": "Julien Riel",
  "license": "MIT",
  "homepage": "https://github.com/julien-riel/maplibre-animated-shaders#readme",
  "bugs": {
    "url": "https://github.com/julien-riel/maplibre-animated-shaders/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/julien-riel/maplibre-animated-shaders",
    "directory": "packages/lib"
  },
  "peerDependencies": {
    "maplibre-gl": ">=3.0.0"
  },
  "dependencies": {
    "@maplibre/maplibre-gl-style-spec": "^24.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.10",
    "vite-plugin-dts": "^3.7.0",
    "vite-plugin-glsl": "^1.2.0"
  }
}
