{
  "name": "@maplibre-animated-shaders/react",
  "version": "0.1.0",
  "description": "React bindings for MapLibre Animated Shaders",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "maplibre-animated-shaders": ">=0.1.0",
    "maplibre-gl": ">=3.0.0",
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "maplibre",
    "react",
    "webgl",
    "shaders",
    "animation",
    "maps"
  ],
  "author": "Julien Riel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/julien-riel/maplibre-animated-shaders.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/julien-riel/maplibre-animated-shaders/issues"
  },
  "homepage": "https://github.com/julien-riel/maplibre-animated-shaders/tree/main/packages/react#readme"
}
