{
  "name": "maplibre-animated-shaders",
  "version": "0.1.0",
  "description": "Animated GLSL shaders for MapLibre GL JS",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./shaders/*": "./dist/shaders/*"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "dev:demo": "vite --config packages/demo/vite.config.ts",
    "build": "npm run validate:glsl && tsc && vite build --mode lib",
    "build:lib": "npm run validate:glsl && vite build --mode lib",
    "build:demo": "vite build --config packages/demo/vite.config.ts",
    "preview": "vite preview",
    "preview:demo": "vite preview --config packages/demo/vite.config.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "dev:e2e": "vite --config e2e/test-app/vite.config.ts",
    "validate:glsl": "npx tsx scripts/validate-glsl.ts",
    "bench": "vitest bench",
    "bench:run": "vitest bench --run",
    "bench:ci": "vitest bench --run --reporter=json --outputFile=benchmark-results.json",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "changelog": "npx tsx scripts/generate-changelog.ts",
    "changelog:write": "npx tsx scripts/generate-changelog.ts --write",
    "version": "npm run changelog:write && git add CHANGELOG.md",
    "prepublishOnly": "npm run build:lib",
    "size": "size-limit",
    "size:check": "size-limit --json"
  },
  "keywords": [
    "maplibre",
    "maplibre-gl",
    "webgl",
    "glsl",
    "shaders",
    "animation",
    "maps",
    "gis",
    "visualization"
  ],
  "author": "Julien Riel",
  "license": "MIT",
  "homepage": "https://github.com/julien-riel/maplibre-animated-shaders#readme",
  "bugs": {
    "url": "https://github.com/julien-riel/maplibre-animated-shaders/issues"
  },
  "peerDependencies": {
    "maplibre-gl": ">=3.0.0"
  },
  "dependencies": {
    "@maplibre/maplibre-gl-style-spec": "^24.4.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "gif-encoder-2": "^1.0.5",
    "gifski": "^1.7.1",
    "maplibre-gl": "^4.0.0",
    "playwright": "^1.57.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.2.0",
    "sirv": "^3.0.2",
    "size-limit": "^12.0.0",
    "tsx": "^4.7.0",
    "typedoc": "^0.28.15",
    "typescript": "^5.3.0",
    "vite": "^5.0.10",
    "vite-plugin-dts": "^3.7.0",
    "vite-plugin-glsl": "^1.2.0",
    "vitest": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/julien-riel/maplibre-animated-shaders"
  }
}
