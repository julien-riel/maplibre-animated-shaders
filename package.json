{
  "name": "maplibre-animated-shaders-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for MapLibre Animated Shaders",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm -w maplibre-animated-shaders run dev",
    "dev:demo": "npm -w @maplibre-animated-shaders/demo run dev",
    "dev:playground": "npm -w @maplibre-animated-shaders/playground run dev",
    "build": "npm -w maplibre-animated-shaders run build",
    "build:lib": "npm -w maplibre-animated-shaders run build:lib",
    "build:demo": "npm -w @maplibre-animated-shaders/demo run build",
    "build:playground": "npm -w @maplibre-animated-shaders/playground run build",
    "build:all": "npm run build:lib && npm run build:demo && npm run build:playground",
    "preview:demo": "npm -w @maplibre-animated-shaders/demo run preview",
    "preview:playground": "npm -w @maplibre-animated-shaders/playground run preview",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "lint:fix": "eslint packages/*/src --ext .ts,.tsx --fix",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx,vue,css}\"",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,tsx,vue,css}\"",
    "typecheck": "npm -w maplibre-animated-shaders run typecheck",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "dev:e2e": "vite --config e2e/test-app/vite.config.ts",
    "validate:glsl": "npx tsx scripts/validate-glsl.ts",
    "bench": "vitest bench",
    "bench:run": "vitest bench --run",
    "bench:ci": "vitest bench --run --reporter=json --outputFile=benchmark-results.json",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "changelog": "npx tsx scripts/generate-changelog.ts",
    "changelog:write": "npx tsx scripts/generate-changelog.ts --write",
    "size": "size-limit",
    "size:check": "size-limit --json"
  },
  "author": "Julien Riel",
  "license": "MIT",
  "homepage": "https://github.com/julien-riel/maplibre-animated-shaders#readme",
  "bugs": {
    "url": "https://github.com/julien-riel/maplibre-animated-shaders/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/julien-riel/maplibre-animated-shaders"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "gif-encoder-2": "^1.0.5",
    "gifski": "^1.7.1",
    "maplibre-gl": "^4.0.0",
    "playwright": "^1.57.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.2.0",
    "size-limit": "^12.0.0",
    "tsx": "^4.7.0",
    "typedoc": "^0.28.15",
    "typescript": "^5.3.0",
    "vite": "^5.0.10",
    "vite-plugin-dts": "^3.7.0",
    "vite-plugin-glsl": "^1.2.0",
    "vitest": "^1.1.0"
  }
}
